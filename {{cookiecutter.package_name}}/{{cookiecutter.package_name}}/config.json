{
  "data": {
    "image_path": "path_to_the_image_folder",
    "random_state": 123456,
    "image_size": 224
  },
  "train": {
    "batch_size": 32,
    "epochs": 50,
    "checkpoint_save_dir": "saved\\checkpoints",
    "log_save_dir": "saved\\logs",
    "save_period": 1,
    "verbosity": 2,
    "early_stop": 10,
    "tensorboard": true,
    "n_gpu": 1,
    "seed": 123456,
    "optimizer": {
      "type": "Adam",
      "args": {
        "lr": 0.001,
        "weight_decay": 0
      }
    },
    "resume": "saved/checkpoints/checkpoint_name.pth",
    "loss": "cross_entropy_loss",
    "metric": "accuracy"
  },
  "model": {
    "input": [
      3,
      256,
      256
    ],
    "output": 17
  }
}
